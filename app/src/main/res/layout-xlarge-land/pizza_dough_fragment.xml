<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_dark_gray"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/arrow_up" />

    <ImageView
        android:id="@+id/pizzaDoughFragment_dough"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/dough_thin"/>


    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/arrow_down" />

    <ImageView
        android:id="@+id/dough_thick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dough_thick"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/dough_medium"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dough_medium"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/dough_thin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dough_thin"
        android:visibility="invisible" />


</LinearLayout>